<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/topPanelimageView"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/top_panel" />

        <ImageView
            android:id="@+id/logoimageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="@+id/topPanelimageView"
            app:layout_constraintTop_toTopOf="@+id/topPanelimageView"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/person1imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/person2imageView"
            app:layout_constraintEnd_toStartOf="@+id/person2imageView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/titletextView"
            app:layout_constraintTop_toTopOf="@+id/person2imageView"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/person1" />

        <ImageView
            android:id="@+id/person3imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/person2imageView"
            app:layout_constraintTop_toBottomOf="@+id/topPanelimageView"
            app:srcCompat="@drawable/person3" />

        <ImageView
            android:id="@+id/person2imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/person3imageView"
            app:layout_constraintEnd_toStartOf="@+id/person3imageView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/person1imageView"
            app:layout_constraintTop_toTopOf="@+id/person3imageView"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/person2" />

        <TextView
            android:id="@+id/titletextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:background="@color/darkPurple"
            android:padding="8dp"
            android:text="Layout Workout"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/logoimageView"
            app:layout_constraintTop_toBottomOf="@+id/topPanelimageView" />

        <ImageView
            android:id="@+id/image1View"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toStartOf="@+id/image2View"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoimageView"
            app:srcCompat="@drawable/image1" />

        <ImageView
            android:id="@+id/image2View"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="@+id/image1View"
            app:layout_constraintEnd_toStartOf="@+id/image3View"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image1View"
            app:layout_constraintTop_toTopOf="@+id/image1View"
            app:srcCompat="@drawable/image2" />

        <ImageView
            android:id="@+id/image3View"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="@+id/image2View"
            app:layout_constraintEnd_toStartOf="@+id/image4View"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image2View"
            app:layout_constraintTop_toTopOf="@+id/image2View"
            app:srcCompat="@drawable/image3" />

        <ImageView
            android:id="@+id/image4View"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="@+id/image3View"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image3View"
            app:layout_constraintTop_toTopOf="@+id/image3View"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/image4" />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"
            android:background="@color/darkPurple"
            android:hint="Start"
            android:padding="8dp"
            android:text="Just Do It"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topPanelimageView"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
